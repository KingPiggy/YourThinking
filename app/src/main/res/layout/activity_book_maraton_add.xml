<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bookmaraton_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FCFFFDFD"
    tools:context=".BookMaraton.BookMaratonActivity">

    <LinearLayout
        android:id="@+id/layout_maraton_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="검색"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="@color/black" />
        <EditText
            android:id="@+id/et_maraton_search"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:ems="13"
            android:hint="책 검색을 해주세요!" />
        <ImageButton
            android:id="@+id/btn_maraton_search"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_search" />
    </LinearLayout>
    <ScrollView
        android:id="@+id/scroll_maraton_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scrollbars="vertical">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_maraton_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager" />
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >
        <EditText
            android:id="@+id/et_maraton_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:hint="시작 날짜 (ex20190101)"
            android:inputType="date"
            android:textAlignment="center"
            android:clickable="true"
            android:focusable="false"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:text="~" />

        <EditText
            android:id="@+id/et_maraton_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:hint="종료 날짜 (ex20200101)"
            android:inputType="date"
            android:textAlignment="center"
            android:textSize="15dp" />


    </LinearLayout>

</LinearLayout>