<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MakeChatRoomActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_make_chat_room"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/white"
        android:elevation="1dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <TextView
            android:id="@+id/text_view_make_chat_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="채팅방 생성"
            android:textColor="@color/blackSoft"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_make_chat_room_exec"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:background="@drawable/button_clip_style"
            android:text="다음" />

    </android.support.v7.widget.Toolbar>


    <TextView
        android:id="@+id/text_view_make_chat_room_q"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar_make_chat_room"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="채팅방 제목을 입력해주세요."
        android:textColor="@color/blackSoft"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/edit_text_make_chat_room_a"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/text_view_make_chat_room_q"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:maxLength="20"
        android:textSize="20dp" />

</RelativeLayout>