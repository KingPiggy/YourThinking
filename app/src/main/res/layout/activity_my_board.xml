<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGray">

    <TextView
        android:id="@+id/text_view_search_board"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/textview"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="내가 쓴 게시글"
        android:textColor="@color/blackSoft"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/text_view_search_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_search_board"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="00의 게시물 수 : 00"
        android:textSize="15dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_search_count"
        android:layout_marginTop="20dp"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"></android.support.v7.widget.RecyclerView>

</RelativeLayout>