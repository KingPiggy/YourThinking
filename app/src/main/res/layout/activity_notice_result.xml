<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lightGray">

        <TextView
            android:id="@+id/text_view_notice_first"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/textview"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="공지사항"
            android:textColor="@color/blackSoft"
            android:textSize="16dp" />

        <RelativeLayout
            android:id="@+id/layout_notice_big1"
            android:layout_width="match_parent"
            android:layout_below="@id/text_view_notice_first"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_view_notice_result_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="글 제목"
                android:textColor="@color/blackSoft"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/text_view_notice_result_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_view_notice_result_title"
                android:layout_alignLeft="@id/text_view_notice_result_title"
                android:layout_marginTop="10dp"
                android:text="닉네임"
                android:textColor="@color/blackSoft"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/text_view_notice_result_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_view_notice_result_name"
                android:layout_alignLeft="@id/text_view_notice_result_name"
                android:text="0000-00-00 00:00"
                android:textColor="@color/blackSoft"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/text_view_notice_result_recommend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/text_view_notice_result_date"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@id/text_view_notice_result_date"
                android:text="추천 "
                android:textColor="@color/blackSoft"
                android:textSize="12dp" />

            <View
                android:id="@+id/view_notice_result_border"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/text_view_notice_result_date"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/deepGray" />

            <TextView
                android:id="@+id/text_view_notice_result_contents"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@id/view_notice_result_border"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:text="글 내용"
                android:textColor="@color/blackSoft" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_notice_big1"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <View
                android:id="@+id/view_notice_result_border2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/deepGray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="댓글"
                android:textColor="@color/blackSoft" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/text_view_notice_reply_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="닉네임"
                    android:textColor="@color/blackSoft"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/et_notice_reply_contents"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/text_view_notice_reply_name"
                    android:hint="댓글을 작성해주세요"
                    android:textSize="15dp" />

                <Button
                    android:id="@+id/btn_notice_reply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/button"
                    android:text="작성" />

            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_notice_Reply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager" />
        </LinearLayout>

    </RelativeLayout>
</ScrollView>