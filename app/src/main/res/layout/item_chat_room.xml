<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardview_chat_room"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/text_view_chat_room_item_room_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="채팅방 제목"
            android:maxLines="1"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/text_view_chat_room_item_book_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_chat_room_item_room_title"
            android:layout_marginTop="10dp"
            android:text="이야기 나눌 책"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/text_view_chat_room_item_room_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_chat_room_item_book_title"
            android:layout_marginTop="10dp"
            android:text="채팅방 설명 20자"
            android:textSize="12dp"
            android:maxLength="50"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>