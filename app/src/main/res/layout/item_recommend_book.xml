<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview_recommend_item"
        cardCornerRadius="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_recommend_item_thumbnail"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/text_view_recommend_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/iv_recommend_item_thumbnail"
                android:text="책 타이틀"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/text_view_recommend_item_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_view_recommend_item_title"
                android:layout_alignLeft="@id/text_view_recommend_item_title"
                android:layout_marginTop="5dp"
                android:text="저자"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/text_view_recommend_item_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/text_view_recommend_item_author"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/text_view_recommend_item_author"
                android:text="출판사"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/text_view_recommend_item_isbn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_view_recommend_item_author"
                android:layout_alignLeft="@id/text_view_recommend_item_author"
                android:layout_marginTop="5dp"
                android:text="ISBN"
                android:textSize="12dp" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>