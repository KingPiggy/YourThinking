<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/item_border"
    android:paddingLeft="5dp">

    <ImageView
        android:id="@+id/iv_recommend_item_thumbnail2"
        android:layout_width="75dp"
        android:layout_height="100dp"
        android:background="@drawable/digimon"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/ListView_item_title_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@id/iv_recommend_item_thumbnail2"
        android:padding="5dp"
        android:text="text1"
        android:textAlignment="textStart"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/iv_recommend_item_thumbnail2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pageNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@id/iv_recommend_item_thumbnail2"
        android:padding="5dp"
        android:text="text2"
        android:textAlignment="textStart"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/iv_recommend_item_thumbnail2"
        app:layout_constraintTop_toBottomOf="@+id/ListView_item_title_TV" />

    <TextView
        android:id="@+id/currentPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@id/iv_recommend_item_thumbnail2"
        android:padding="5dp"
        android:text="0 p"
        android:textAlignment="textStart"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/iv_recommend_item_thumbnail2"
        app:layout_constraintTop_toBottomOf="@+id/pageNum" />

</android.support.constraint.ConstraintLayout>
